@model Mvc.Areas.AccessControl.ViewModels.UserViewModel

@{ ViewData["Title"] = "Index"; }

<div class="panel panel-default">
	<div class="panel-heading">@ViewData["Title"]</div>
	<div class="panel-body">
		<table id="tableUser" class="table table-striped table-bordered table-condensed table-hover table-responsive" cellspacing="0">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(model => model.Name)</th>
					<th>@Html.DisplayNameFor(model => model.Email)</th>
					<th><a class="btn btn-success text-center" asp-action="Create" title="Incluir usuário"><span class="glyphicon glyphicon-plus"></span></a></th>
				</tr>
			</thead>
		</table>
	</div>
</div>

@section Scripts {
	<partial name="_DataGridScriptsPartial" />
	<environment include="Development" names="Development">
		<script src="~/js/areas/access-control/user-index.js"></script>
	</environment>
	<environment exclude="Development" names="Staging,Production">
		<script src="~/js/areas/access-control/user-index.min.js" asp-append-version="true"></script>
	</environment>
}